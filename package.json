{
  "name": "@benjamin-guibert/todex-contracts",
  "description": "Token decentralised exchange where you can deposit & withdraw tokens, make orders and trades (smart contracts).",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/benjamin-guibert/todex-contracts.git"
  },
  "author": "Benjamin Guibert <contact@bguibert.com>",
  "license": "MIT",
  "bugs": "https://github.com/benjamin-guibert/todex-contracts/issues",
  "files": [
    "build/",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --max-warnings 0 --ext js,ts,md . && prettier --list-different .",
    "compile": "truffle compile && typechain --target truffle-v5 './build/**/*.json' && tsc -p tsconfig.migrate.json",
    "blockchain": "docker-compose up blockchain",
    "bc:start": "docker-compose up -d blockchain",
    "bc:stop": "docker-compose down blockchain",
    "migrate": "tsc -p tsconfig.migrate.json && truffle migrate",
    "test": "truffle test",
    "test:cn": "truffle test --compile-none"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@typechain/truffle-v5": "^6.0.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-md": "^1.0.19",
    "husky": "^7.0.4",
    "prettier": "^2.5.0",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solidity-coverage": "^0.7.17",
    "truffle-assertions": "^0.9.2",
    "truffle-typings": "^1.0.8",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.5",
    "typescript": "^4.5.2"
  }
}
